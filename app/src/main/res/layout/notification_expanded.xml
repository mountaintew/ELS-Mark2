<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:gravity="center">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notif_profile"
            android:layout_width="65dp"
            android:background="@drawable/bordered"
            android:backgroundTint="@color/metatext"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notif_name"
                android:layout_width="match_parent"
                android:text=""
                android:textSize="26sp"
                android:gravity="center"
                android:fontFamily="@font/productsans"
                android:textColor="@color/dark"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Emergency Contact:"
                android:textSize="12sp"
                android:gravity="center"
                android:fontFamily="@font/productsans"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/notif_cont"
                android:layout_width="match_parent"
                android:text=""
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/productsans"
                android:textColor="@color/dark"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bdaylbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/bday"
                android:textColor="@color/metatext"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/notif_bday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sexlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/sex"
                android:textColor="@color/metatext"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/notif_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btypelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="Age"
                android:textColor="@color/metatext"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/notif_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="21"
                android:textColor="@color/dark"
                android:textSize="14sp" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/heightlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/height"
                android:textColor="@color/metatext"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/notif_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/weightlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/weight"
                android:textColor="@color/metatext"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/notif_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/statelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="@string/state"
                android:textColor="@color/metatext"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/notif_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>