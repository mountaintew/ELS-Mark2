<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle"
                    android:thicknessRatio="55"
                    >
                    <padding
                        android:left="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        android:top="0dp"
                        />
                    <size
                        android:width="50dp"
                        android:height="10dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/main"
                        />
                    <corners android:radius="2dip"
                        />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_keyboard_arrow_down_24" android:gravity="center_vertical|right" android:right="5dp"/>
        </layer-list>
    </item>
</selector>