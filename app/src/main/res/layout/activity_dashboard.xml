<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    tools:context=".Dashboard">

    <RelativeLayout
        android:id="@+id/sub_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:background="@drawable/bg_prof_sub"
        android:backgroundTint="@color/white">











        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_prof_sub"
                android:backgroundTint="#ebebeb"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/productsans"
                    android:gravity="center_vertical"
                    android:text="Lester Arana"
                    android:textColor="@color/dark"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/productsans"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/bdaylbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text="@string/bday"
                            android:textColor="@color/metatext"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/bday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/dark"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/sexlbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text="@string/sex"
                            android:textColor="@color/metatext"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/sex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/dark"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/btypelbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text="@string/type"
                            android:textColor="@color/metatext"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/btype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/dark"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/heightlbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text="@string/height"
                            android:textColor="@color/metatext"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/dark"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/weightlbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text="@string/weight"
                            android:textColor="@color/metatext"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/dark"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/statelbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text="@string/state"
                            android:textColor="@color/metatext"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/productsans"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/dark"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/location_layout"
        android:orientation="horizontal"
        android:layout_above="@id/embtn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:text="Location"
            android:textSize="16sp"
            android:fontFamily="@font/productsans"
            android:textColor="@color/dark"
            />
        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="55dp"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""

            />

    </LinearLayout>
    <Button
        android:id="@+id/embtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btncircle"
        android:backgroundTint="#ef5350"
        android:fontFamily="@font/bold"
        android:layout_alignParentBottom="true"
        android:text="Emergency"
        android:layout_marginLeft="5dp"
        android:textAllCaps="false"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"/>





    </RelativeLayout>













</RelativeLayout>